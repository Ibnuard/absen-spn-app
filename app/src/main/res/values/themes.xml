<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AbsenSPN" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSecondaryContainer">@color/primary</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurface">@color/primary</item>
    </style>

    <style name="NavigationLabelActiveStyle" parent="Theme.AbsenSPN">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="NavigationLabelInactiveStyle" parent="Theme.AbsenSPN">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Bottom Bar Indicator Styles -->
    <style name="BottomBarIndicatorStyle">
        <item name="android:height">0dp</item>
    </style>
</resources>